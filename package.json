{
    "name": "typescript-react-starter-kit",
    "repository": "https://github.com/hyldmo/typescript-react-starter-kit",
    "version": "1.1.0",
    "scripts": {
        "dev": "npm run compileConf:dev && webpack-dev-server --config webpack.development.config.js --progress --colors --hot",
        "prod": "npm run compileConf:prod && webpack --config webpack.production.config.js --progress --colors",
        "test": "jest",
        "test:cover": "jest --coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
        "lint": "tslint {__tests__,src}/**/*.{ts,tsx} webpack.*.ts",
        "stylelint": "stylelint src/**/*.scss --syntax scss",
        "compileConf:dev": "tsc webpack.development.config.ts --lib es6,dom --esModuleInterop",
        "compileConf:prod": "tsc webpack.production.config.ts --lib es6,dom --esModuleInterop",
        "stats": "npm run compileConf:prod && webpack --config webpack.production.config.js --profile --json > compilation-stats.json"
    },
    "jest": {
        "transform": {
            ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
        },
        "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "json",
            "scss"
        ],
        "modulePaths": ["src"],
        "moduleNameMapper": {
            "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.ts",
            "\\.(css|scss|pcss)$": "<rootDir>/__mocks__/styleMock.ts"
        }
    },
    "keywords": [
        "Typescript",
        "React",
        "Redux",
        "CSSNext"
    ],
    "license": "MIT",
    "dependencies": {
        "history": "^4.6.3",
        "normalize.css": "^8.0.0",
        "react": "^16.3.2",
        "react-dom": "^16.3.2",
        "react-redux": "^5.0.6",
        "react-router": "^4.2.0",
        "react-router-dom": "^4.2.2",
        "react-router-redux": "^5.0.0-alpha.6",
        "redux": "^4.0.0",
        "redux-saga": "^0.16.0"
    },
    "devDependencies": {
        "@types/history": "^4.6.0",
        "@types/jest": "^22.2.2",
        "@types/node": "^10.1.3",
        "@types/react": "16.3.15",
        "@types/react-dom": "16.0.5",
        "@types/react-redux": "^5.0.13",
        "@types/react-router": "^4.0.18",
        "@types/react-router-dom": "^4.2.2",
        "@types/react-router-redux": "^5.0.10",
        "@types/react-test-renderer": "^16.0.0",
        "@types/redux-actions": "^2.2.3",
        "@types/webpack": "^4.1.2",
        "@types/webpack-env": "^1.13.5",
        "coveralls": "^3.0.0",
        "css-loader": "^0.28.7",
        "html-webpack-plugin": "^3.0.6",
        "jest": "^22.4.3",
        "mini-css-extract-plugin": "^0.4.0",
        "node-sass": "^4.7.2",
        "postcss": "^6.0.6",
        "postcss-loader": "^2.1.3",
        "react-hot-loader": "4.1.2",
        "react-redux-typescript": "^2.3.0",
        "react-test-renderer": "16.4.0",
        "redbox-react": "^1.5.0",
        "sass-loader": "^7.0.1",
        "style-loader": "^0.21.0",
        "stylelint": "^9.1.3",
        "stylelint-config-recommended": "^2.1.0",
        "stylelint-config-recommended-scss": "^3.1.0",
        "stylelint-scss": "^3.1.0",
        "ts-jest": "^22.4.2",
        "ts-loader": "^4.1.0",
        "tslint": "^5.6.0",
        "tslint-eslint-rules": "^5.1.0",
        "typescript": "^2.7.2",
        "typings-for-css-modules-loader": "^1.7.0",
        "webpack": "^4.8.1",
        "webpack-cli": "^2.1.3",
        "webpack-dev-server": "^3.1.4"
    }
}
