{
	"compilerOptions": {
		"outDir": "./dist/",
		"sourceMap": true,
		"strict": true,
		"strictFunctionTypes": false, //blocked by https://github.com/Microsoft/TypeScript/issues/12400
		"noUnusedLocals": true,
		"resolveJsonModule": true,
		"downlevelIteration": true,
		"module": "commonjs",
		"target": "es5",
		"lib": [
			"dom",
			"es2016",
			"es2017"
		],
		"esModuleInterop": true,
		"jsx": "react",
		"baseUrl": "src"
	},
	"include": [
		"./src/*", "src/reducers/sessions.ts", "src/reducers/talks.ts", "src/components/Sessions/Sessions.tsx", "src/components/Sessions/Session.tsx", "src/components/Session.tsx", "src/components/Sessions.tsx", "src/actions/sessions.ts"
	]
}