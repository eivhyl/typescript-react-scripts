{
	"compilerOptions": {
		"outDir": "./dist/",
		"sourceMap": true,
		"strict": true,
		"noUnusedLocals": true,
		"resolveJsonModule": true,
		"downlevelIteration": true,
		"allowJs": true,
		"checkJs": true,
		"module": "commonjs",
		"target": "es5",
		"lib": [
			"dom",
			"es2016",
			"es2017"
		],
		"esModuleInterop": true,
		"jsx": "react",
		"baseUrl": "src"
	},
	"include": [
		"./src/*", "__tests__/utils.test.ts"
	]
}