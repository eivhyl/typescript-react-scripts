{
	"compilerOptions": {
		"outDir": "./dist/",
		"sourceMap": true,
		"strict": true,
		"strictFunctionTypes": false, //blocked by https://github.com/Microsoft/TypeScript/issues/12400
		"noUnusedLocals": true,
		"resolveJsonModule": true,
		"downlevelIteration": true,
		"module": "commonjs",
		"target": "es5",
		"lib": [
			"dom",
			"es2016",
			"es2017"
		],
		"esModuleInterop": true,
		"jsx": "react",
		"baseUrl": "src"
	},
	"include": [
		"./src/*"
	]
}